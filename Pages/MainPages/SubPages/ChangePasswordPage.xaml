<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PogranPunktApp.Pages.MainPages.SubPages.ChangePasswordPage"
             xmlns:local="clr-namespace:PogranPunktApp.CustomComponents"
             Title="ChangePasswordPage">
    <ScrollView>
        <StackLayout BackgroundColor="{StaticResource BackGroundColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Text="Старый пароль"/>
                <local:BaseEntry />
            </StackLayout>
            <StackLayout>
                <Label Text="Новый пароль"/>
                <local:BaseEntry />
            </StackLayout>
            <StackLayout>
                <Label Text="Повторите новый пароль"/>
                <local:BaseEntry />
            </StackLayout>
            <StackLayout>
                <local:BaseButton Text="Изменить Пароль"/>
            </StackLayout>
            <local:BackButton Clicked="goBack" HorizontalOptions="End"/>
        </StackLayout>
    </ScrollView>
</ContentPage>